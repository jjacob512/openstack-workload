{
  "id": "bc-template-heat",
  "description": "Installation for Heat",
  "attributes": {
    "heat": {
      "debug": false,
      "verbose": false,
      "rabbitmq_instance": "none",
      "database_instance": "none",
      "keystone_instance": "none",
      "keystone_service_user": "heat",
      "keystone_service_password": "",
      "gitrepo": "http://github.com/openstack/heat.git",
      "git_instance": "",
      "git_refspec": "stable/havana",
      "use_gitrepo": false,
      "use_gitbarclamp": false,
      "use_pip_cache": false,
      "pfs_deps": [
        "pip://python-heatclient",
        "pip://setuptools-git",
        "pip://distribute>=0.6.28",
        "pip://MySQL-python"
      ],
      "use_virtualenv": false,
      "api": {
        "protocol": "http",
        "cfn_port": 8000,
        "engine_port": 8001,
        "cw_port": 8003,
        "port": 8004
      },
      "db": {
        "password": "",
        "user": "heat",
        "database": "heat"
      }
    }
  },
  "deployment": {
    "heat": {
      "crowbar-revision": 0,
      "element_states": {
        "heat-server": [ "readying", "ready", "applying" ]
      },
      "elements": {},
      "element_order": [
        [ "heat-server" ]
      ],
      "element_run_list_order": {
        "heat-server": 101
      },
      "config": {
        "environment": "heat-base-config",
        "mode": "full",
        "transitions": false,
        "transition_list": [
        ]
      }
    }
  }
}

